{
  "name": "pupicrochet-store",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "db:push": "dotenv -e .env -- npx prisma db push",
    "db:seed": "dotenv -e .env -- tsx prisma/seed.ts",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "npm run test:migrate && vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:migrate": "rm -f ./prisma/test.db && DATABASE_URL=\"file:./prisma/test.db\" npx prisma migrate deploy",
    "test:migrate:resolve": "DATABASE_URL=\"file:./prisma/test.db\" npx prisma migrate resolve --applied 20250722100000_add_product_categories_many_to_many"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bcrypt": "^6.0.0",
    "@types/nodemailer": "^6.4.17",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^9.0.0",
    "eslint": "^9.8.0",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^6.12.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.3.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "nodemailer": "^7.0.5",
    "uuid": "^11.1.0"
  },
  "prisma": {
    "seed": "dotenv -e .env -- tsx prisma/seed.ts"
  },
  "overrides": {
    "cookie": "1.0.2"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "prettier --write",
      "eslint"
    ]
  }
}
